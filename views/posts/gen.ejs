

		<script src="js/fabric.min.js"></script>
		<script src="js/canvas2image.js"></script>
		<script src="js/app.js?0.1.0"></script>
		<style type="text/css">
			@font-face{
				font-family: "KH3 Post";
				src: url(font/font.otf);
			}
			body, html {
			    height: 100%;
			    width: 100%;
			    padding: 0;
			    margin: 0;
			}
			canvas {
				display: block;
				margin: 0 auto;
			}
			#container{
				margin: auto;
			}
		</style>

		<h1 style="text-align: center;" class="title">KH3 Post Creator</h1>
		<div class="container">
			<canvas id="canvas" style="border:1px solid #000000"/>
		</div>

		<form action="/posts" method="POST">

		<div style="display: block; margin: auto; margin-bottom: 10px; text-align: center;">
			<div>
				<p>Select person</p>
				<select onchange='onPersonChange(this.value)' name = 'Character'>
					<option value='unknown'>Unknown</option>
					<option value='sora'>Sora</option>
					<option value='donald'>Donald</option>
					<option value='goofy'>Goofy</option>
					<option value='mickey'>Mickey</option>
					<option value='ienzo'>Ienzo</option>
					<option value='pence'>Pence</option>
				</select>
			</div>
			<div>
				<p>Enter caption</p>
				<textarea onkeyup="onTextChange(this.value)" onblur="onTextChange(this.value)" rows="4" cols="50" name = 'Caption'>Enter caption</textarea>
			</div>
			<div>
				<p>Upload post image</p>
				<input type="input" name = 'Posts'/>
			</div>
			<div style="margin-top: 20px">
				<button type="submit" class="btn btn-success">Create Post</button>
			</div>
		</div>
	
	</form>
